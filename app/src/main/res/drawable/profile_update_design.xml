<?xml version="1.0" encoding="utf-8"?>

<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:innerRadius="0dp"
    android:shape="oval"
    android:thickness="50dp"
    android:useLevel="false">
    <gradient
        android:angle="0"
        android:centerX="0"
        android:centerY="0.8"
        android:centerColor="@color/trans"
        android:startColor="#99FFFFFF"
        android:endColor="@color/trans"
        android:type="sweep"/>
    <padding android:bottom="16dp"
        android:left="16dp"
        android:right="16dp"
        android:top="16dp"/>
    <corners android:radius="6dp" />
</shape>
