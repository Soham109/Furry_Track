    <style name="regu_edittextview" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/_36sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:paddingLeft">@dimen/_15sdp</item>
        <item name="android:paddingRight">@dimen/_15sdp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:elevation" tools:targetApi="lollipop">1dp</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:background">@drawable/edit_layout</item>
    </style>


    <style name="regu_edittextview_speetch" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/_34sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:paddingLeft">@dimen/_15sdp</item>
        <item name="android:paddingRight">@dimen/_10sdp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:elevation" tools:targetApi="lollipop">1dp</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:background">@drawable/edit_layout</item>
    </style>

    <style name="row_textview" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/chech_text</item>


        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">@dimen/_18sdp</item>
    </style>




    <style name="SearchViewStyle" parent="AppTheme">
        <item name="android:textColorPrimary">@color/text_color</item>
        <!--This line changes the color of icons in toolbar (back, overflow menu icons)-->
        <item name="android:textColorSecondary">@color/text_color</item>

    </style>

    <style name="ActionBarThemeOverlay" parent="">
        <item name="android:textColorPrimary">#fff</item>
        <item name="android:textColorSecondary">#fff</item>
        <item name="colorControlNormal">#fff</item>
        <item name="colorControlHighlight">#3fff</item>
    </style>

    <style name="ActionBarPopupThemeOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Header">
        <item name="android:background">@drawable/right_left_to_heder</item>
        <item name="android:elevation" tools:targetApi="lollipop">6dp</item>
    </style>

    <style name="ActionBar.TitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">18sp</item>
    </style>


</resources>
