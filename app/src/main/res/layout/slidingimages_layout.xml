<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_6sdp"
        android:layout_marginRight="@dimen/_6sdp"
        android:background="@drawable/ac_check_white"
        android:elevation="@dimen/_1sdp"
        android:orientation="horizontal"

        app:cardCornerRadius="@dimen/_7sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/image"
                android:layout_width="@dimen/_95sdp"
                android:layout_height="@dimen/_95sdp"
                android:layout_margin="@dimen/_3sdp"
                android:scaleType="centerCrop"
                app:riv_corner_radius="@dimen/_50sdp" />
            <!--app:riv_corner_radius_bottom_left="@dimen/_7sdp"
            app:riv_corner_radius_top_left="@dimen/_7sdp"-->


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <com.application.furry_track.CustomeView.custome_Textview_bold
                    android:id="@+id/txt_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_5sdp"

                    android:gravity="center_vertical"
                    android:textColor="@color/app_color"
                    android:textSize="@dimen/_15sdp" />

                <com.application.furry_track.CustomeView.custome_Textview
                    android:id="@+id/txt_dob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:gravity="center_vertical"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_14sdp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <com.application.furry_track.CustomeView.custome_Textview
                        android:id="@+id/txt_dob_aa"
                        android:layout_width="0dp"
                        android:layout_weight="9.9"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"

                        android:gravity="center_vertical"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_14sdp" />

                    <ImageView
                        android:id="@+id/imag_arrow"
                        android:layout_width="@dimen/_14sdp"
                        android:layout_height="@dimen/_14sdp"

                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/_3sdp"

                        android:src="@drawable/right_arrow"
                        app:tint="@color/trans_black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_edit"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:padding="@dimen/_3sdp"
                        android:src="@drawable/edit"
                        app:tint="@color/app_color" />

                    <ImageView
                        android:id="@+id/img_delete"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginLeft="@dimen/_7sdp"
                        android:padding="@dimen/_3sdp"
                        android:src="@drawable/delete"
                        app:tint="@color/red_color" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>